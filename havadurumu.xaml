<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DilarOdev.havadurumu"
             Title="havadurumu">



    <StackLayout Padding="10">
        <Entry x:Name="textBox" Placeholder="Şehir girin.."  TextColor="Black"/>
        <Button Text="Ekle" Clicked="Button_Clicked" />
        <Label Text=" Listeden Kaldırmak istediğiniz hava durumuna tıklayınız."/>


        <ScrollView VerticalOptions="FillAndExpand">
            <StackLayout x:Name="imageStackLayout" VerticalOptions="StartAndExpand" HorizontalOptions="CenterAndExpand" Spacing="5">
            </StackLayout>
        </ScrollView>

    </StackLayout>

</ContentPage>